[include]
	# Contains GitHub username, token, etc., inspired by http://stackoverflow.com/questions/8505335/hiding-github-token-in-gitconfig
	path = ~/.gitconfig.local
[core]
	excludesfile = ~/.gitignore_global_osx
	editor = subl -w -n
[color]
	ui = auto
[alias]
	st = status
	ci = commit
	co = checkout
	cp = cherry-pick
	credit = blame
	mustash = stash
	unstage = reset HEAD
	l = log --graph --pretty='%h  %ad%Cgreen%d%Creset %Cred%an%Creset %s' --decorate=short --date=relative
	lall = log --graph --pretty='%h  %ad%Cgreen%d%Creset %Cred%an%Creset %s' --decorate=short --date=relative --all
	b = for-each-ref --sort='-committerdate' refs/heads/ --format='%(committerdate:short) %(refname:short)'
	rb = for-each-ref --sort='committerdate' refs/remotes/ --format='%(committerdate:short) %(refname:short) (%(authorname))'
	pushm = push origin master
	pullm = !git fetch origin && git rebase -p origin/master
	pullall = !git pull && git submodule update --init --recursive
[mergetool]
	keepBackup = false
[push]
	# So I can't do a bare git push (must specify the origin branch)
	default = nothing
[difftool]
	prompt = false
[diff]
	tool = opendiff
[credential]
	helper = osxkeychain
[init]
	# Pre-commit hook that catches attempted force pushes to master, see: http://blog.bigbinary.com/2013/09/19/do-not-allow-force-pusht-to-master.html
	templatedir = ~/bin/git-hooks
